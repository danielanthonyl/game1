{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",                                           // C++ standard
        "-g",                                                   // Enable debugging
        "main.cpp",                                             // The file to compile
        "-o", "${workspaceFolder}/bin/app.exe",                 // Output file

        "-I", "${workspaceFolder}/include",                     // Include directory
        "${workspaceFolder}/animations.cpp",

        "-L", "${workspaceFolder}/libs/SFML/lib",               // Library directory
        "-lsfml-graphics",                                      // Link SFML graphics
        "-lsfml-window",                                        // Link SFML window
        "-lsfml-system",                                        // Link SFML system
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
    }
  ]
}